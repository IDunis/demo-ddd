{
  "editor.rulers": [
    {
      "column": 120,
      "color": "#424142"
    }
  ],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true
  },
  "less.lint.unknownAtRules": "ignore",
  "less.validate": true,
  "scss.validate": true
}
